@using Kendo.Mvc.UI
@using System.Web.Mvc
@model Ekilibrate.Model.Entity.Participante.clsTiempoBase

@{
    ViewBag.Title = "Tiempo";
    ViewBag.Description = "Tiempo";
    Layout = "~/Views/Shared/_Default.cshtml";
}

@using (Html.BeginForm("Index", "Tiempo", FormMethod.Post, new { id = "myform" }))
{
    <h2><img src="../assets/img/icons/Heart Monitor-32.png" />Evaluación del Estilo de Vida</h2>
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div id="simplewizardinwidget" class="wizard" data-target="#simplewizardinwidget-steps">
                <ul>
                    <li data-target="#simplewizardinwidgetstep1" class="complete"><a href='../Participante/Diagnostico'><span class="step">1</span></a>1<span class="chevron"></span></li>
                    <li data-target="#simplewizardinwidgetstep1" class="complete"><a href='../Participante/Alimentacion'><span class="step">2</span></a>2<span class="chevron"></span></li>
                    <li data-target="#simplewizardinwidgetstep1" class="complete"><a href='../Participante/Riesgo'><span class="step">3</span></a>3<span class="chevron"></span></li>
                    <li data-target="#simplewizardinwidgetstep1" class="complete"><a href='../Participante/Cuidado'><span class="step">4</span></a>4<span class="chevron"></span></li>
                    <li data-target="#simplewizardinwidgetstep1" class="complete"><a href='../Participante/Emocion'><span class="step">5</span></a>5<span class="chevron"></span></li>
                    <li data-target="#simplewizardinwidgetstep1" class="active"><span class="step">6</span><span class="chevron"></span></li>
                    <li data-target="#simplewizardinwidgetstep1"><a href='../Participante/Comunicacion'><span class="step">7</span><span class="chevron"></span></a></li>
                    <li data-target="#simplewizardinwidgetstep1"><a href='../Participante/ComunicacionDos'><span class="step">8</span><span class="chevron"></span></a></li>
                    <li data-target="#simplewizardinwidgetstep1"><a href='../Participante/TestFinanzas'><span class="step">9</span><span class="chevron"></span></a></li>
                    <li data-target="#simplewizardinwidgetstep1"><a href='../Participante/Liderazgo'><span class="step">10</span><span class="chevron"></span></a></li>
                </ul>
            </div>
            <div class="widget-header bg-green">
                <span class="widget-caption" style="font-size:28px"><img src="../assets/img/icons/Time Span-32.png" /> Área de relaciones interpersonales</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    @*<a href="#" data-toggle="dispose">
                    <i class="fa fa-times"></i>
                </a>*@
                </div>
            </div>
            <div class="row">
            </div>
            <div class="widget-header bordered-bottom bordered-green">
                <span class="widget-caption green">Test sobre el manejo del tiempo</span>
                <div class="widget-buttons">
                </div>
            </div>
                <div class="widget-body">
                    <h3>Instrucciones</h3>
                    <div id="Horizontal-form">
                        <div class="row">
                            <div class="form-group">
                                <label class="col-lg-12 control-label h4">
                                    El siguiente cuestionario tiene como objetivo que conozcas cómo se encuentra actualmente tu nivel de manejo del tiempo.
                                    Por favor responde de la forma más sincera y objetiva posible.
                                </label>
                            </div>
                        </div>                        
                        <div class="row">
                            <div class="form-group">
                                <label class="col-lg-12 control-label h4">
                                    Selecciona una de las cuatro alternativas que representen mejor tu forma de ser acerca de cómo manejas tu tiempo.
                                </label>                                
                                <br />
                                <label class="col-lg-12 control-label h4">
                                    S - Siempre&nbsp;&nbsp;&nbsp;&nbsp;F - Frecuentemente&nbsp;&nbsp;&nbsp;&nbsp;C - Casi nunca&nbsp;&nbsp;&nbsp;&nbsp;N - Nunca
                                </label>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-12">
                                @if (ViewBag != null && ViewBag.Tiempo != null)
                           {
                                    <table style="width:60%">
                                        <colgroup>
                                            <col style="width:68%" />
                                            <col style="width:8%" />
                                            <col style="width:8%" />
                                            <col style="width:8%" />
                                            <col style="width:8%" />
                                        </colgroup>
                                        <tr>
                                            <th>
                                                <h4>Pregunta</h4>
                                            </th>
                                            <th>
                                                <h4>S</h4>
                                            </th>
                                            <th>
                                                <h4>F</h4>
                                            </th>
                                            <th>
                                                <h4>C</h4>
                                            </th>
                                            <th>
                                                <h4>N</h4>
                                            </th>
                                        </tr>

                                        @foreach (Ekilibrate.Model.Entity.Participante.clsFrecuencia item in ViewBag.Tiempo)
                                {
                                            <tr>
                                                <td>
                                                    <label>@item.PREGUNTA</label>
                                                </td>

                                                <td>
                                                    @*@Html.Kendo().RadioButton().Checked(item.SIEMPRE).Name("S" + item.ID_PREGUNTA).HtmlAttributes(new { @name = item.ID_PREGUNTA, onclick = "OnCheckedFrecuencia("+item.ID_PREGUNTA+", 'S', this);" })*@
                                                    @Html.RadioButton("S" + item.ID_PREGUNTA, item.SIEMPRE, item.SIEMPRE, new { Name = item.ID_PREGUNTA, onclick = "OnCheckedFrecuencia(" + item.ID_PREGUNTA + ", 'S', this);" })
                                                </td>
                                                <td>
                                                    @*@Html.Kendo().RadioButton().Checked(item.FRECUENTE).Name("F" + item.ID_PREGUNTA).HtmlAttributes(new { @name = item.ID_PREGUNTA, onclick = "OnCheckedFrecuencia(" + item.ID_PREGUNTA + ", 'F', this);" })*@
                                                    @Html.RadioButton("F" + item.ID_PREGUNTA, item.FRECUENTE, item.FRECUENTE, new { Name = item.ID_PREGUNTA, onclick = "OnCheckedFrecuencia(" + item.ID_PREGUNTA + ", 'F', this);" })

                                                </td>
                                                <td>
                                                    @*@Html.Kendo().RadioButton().Checked(item.CASI_NUNCA).Name("C" + item.ID_PREGUNTA).HtmlAttributes(new { @name = item.ID_PREGUNTA, onclick = "OnCheckedFrecuencia(" + item.ID_PREGUNTA + ", 'C', this);" })*@
                                                    @Html.RadioButton("C" + item.ID_PREGUNTA, item.CASI_NUNCA, item.CASI_NUNCA, new { Name = item.ID_PREGUNTA, onclick = "OnCheckedFrecuencia(" + item.ID_PREGUNTA + ", 'C', this);" })

                                                </td>
                                                <td>
                                                    @*@Html.Kendo().RadioButton().Checked(item.NUNCA).Name("N" + item.ID_PREGUNTA).HtmlAttributes(new { @name = item.ID_PREGUNTA, onclick = "OnCheckedFrecuencia(" + item.ID_PREGUNTA + ", 'N', this);" })*@
                                                    @Html.RadioButton("N" + item.ID_PREGUNTA, item.NUNCA, item.NUNCA, new { Name = item.ID_PREGUNTA, onclick = "OnCheckedFrecuencia(" + item.ID_PREGUNTA + ", 'N', this);" })
                                                </td>

                                            </tr>
                                }
                                    </table>
                                    <br />
                           }
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="pull-right" style="display: inline-flex; padding-right: 1em;">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-blue"><i class="fa fa-check"></i>Guardar</button>
                                    <button type="button" class="btn btn-warning" onclick="location.href = '../Participante/Emocion';"><i class="fa fa-angle-left"></i> Atrás</button>
                                    <button type="button" class="btn btn-success btn-next" data-last="Finish" onclick="location.href = '../Participante/Comunicacion';">Siguiente <i class="fa fa-angle-right"></i></button>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                </div>
            </div>

    </div>
    <script type="text/javascript">
        function OnCheckedFrecuencia( pID_PREGUNTA, pFrecuencia ,e)
        {
          
            if (e.checked) {

                $.ajax({
                    url: 'Tiempo/AddFrecuencia?pID_PREGUNTA=' + pID_PREGUNTA + '&pFrecuencia=' + pFrecuencia,
                    type: 'POST',
                    data: {

                    },
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {

                        if (data.success) {

                        }
                        else {
                            alert(data.error);
                        }
                    },
                    error: function () {
                        alert("error");
                    }
                });

            }
           
        }

    </script>

}

