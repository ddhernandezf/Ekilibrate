@using Kendo.Mvc.UI
@using System.Web.Mvc
@model Ekilibrate.Model.Entity.Participante.clsRegistroParticipante
@{
    ViewBag.Title = "Registro";
    ViewBag.Description = "Registro de Usuarios";
    Layout = "~/Views/Shared/_Empty.cshtml";
}

<div style="background-image:url(../../assets/img/fondo-1.png); background-size:cover; background-repeat:no-repeat; height:100%;">
    @using (var form = Html.Bootstrap().Begin(new Form().Type(FormType.Vertical)))
    {
        @Html.AntiForgeryToken()
        <div class="register-container animated fadeInDown">
            <div class="registerbox bg-white">
                <div class="registerbox-title">Registro de Participante</div>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()

                <div class="registerbox-caption ">Por favor ingresa la información que se te solicita a continuación</div>
                <div class="registerbox-textbox">
                    @*@(Html.LabelFor(x => x.Nombre, new { @class = "col-sm-12 control-label no-padding-right" }))*@
                    <div class="col-sm-12">
                        @(Html.Kendo().TextBoxFor(x => x.PrimerNombre).HtmlAttributes(new { @class = "form-control", style = "width:100%", Placeholder = " * Primer nombre" }))
                        @Html.ValidationMessageFor(x => x.PrimerNombre, "", new { @class = "text-danger" })
                    </div>                    
                </div>
                <div class="registerbox-textbox">
                </div>
                <div class="registerbox-textbox">
                    @*@(Html.LabelFor(x => x.Apellido, new { @class = "col-sm-12 control-label no-padding-right" }))*@
                    <div class="col-sm-12">
                        @(Html.Kendo().TextBoxFor(x => x.PrimerApellido).HtmlAttributes(new { @class = "form-control", style = "width:100%", Placeholder = " * Primer apellido" }))
                        @Html.ValidationMessageFor(x => x.PrimerApellido, "", new { @class = "text-danger" })
                    </div>                    
                </div>                
                <div class="registerbox-textbox">
                </div>
                <div class="registerbox-textbox">
                    @*@(Html.LabelFor(x => x.Correo, new { @class = "col-sm-4 control-label no-padding-right" }))*@
                    <div class="col-sm-12">
                        @(Html.Kendo().TextBoxFor(x => x.Correo).HtmlAttributes(new { @class = "form-control", style = "width:100%", Placeholder = "* Correo electrónico" }))
                        @Html.ValidationMessageFor(x => x.Correo, "", new { @class = "text-danger" })
                    </div>
                    <br />
                </div>
                <hr class="wide" />
                <div class="registerbox-textbox">
                    @*@(Html.LabelFor(x => x.Departamento, new { @class = "col-sm-12 control-label no-padding-right" }))*@
                    <div class="col-sm-12">
                        @(Html.Kendo().TextBoxFor(x => x.CodigoRegistro).HtmlAttributes(new { @class = "form-control", style = "width:100%", Placeholder = " * Código de registro" }))
                        @Html.ValidationMessageFor(x => x.CodigoRegistro, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="registerbox-textbox">
                </div>                
                <hr class="wide" />
                <div class="registerbox-textbox">
                    @*@Html.Bootstrap().PasswordFor(t => t.Telefono).Placeholder("Enter Password")*@
                    <div class="col-sm-12">
                        @(Html.Kendo().MaskedTextBoxFor(x => x.Password).HtmlAttributes(new { @class = "form-control", style = "width:100%", Placeholder = " * Contraseña", type = "password" }))
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="registerbox-textbox">
                </div>
                <div class="registerbox-textbox">
                    <div class="col-sm-12">
                        @(Html.Kendo().MaskedTextBoxFor(x => x.ConfirmPassword).HtmlAttributes(new { @class = "form-control", style = "width:100%", Placeholder = "* Confirme su contraseña", type = "password" }))
                        @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="registerbox-textbox">
                </div>
                <hr class="wide" />
                @*<div class="registerbox-textbox no-padding-bottom">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" class="colored-primary" checked="checked">
                            <span class="text darkgray">Estoy de acuerdo con <a class="themeprimary">los términos de uso </a> y las poíticas de privacidad</span>
                        </label>
                    </div>
                </div>*@
                <div class="registerbox-submit">
                    (*) Obligatorio
                    @Html.Bootstrap().SubmitButton().Text("Registrarme").Color(BootstrapColors.Primary).HtmlAttributes(new { @class = "pull-right" })
                </div>                
            </div>
        </div>
    }
</div>


