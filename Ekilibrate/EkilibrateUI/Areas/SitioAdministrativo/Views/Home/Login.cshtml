@{
    ViewBag.Title = "Inicio Sesión";
    ViewBag.Description = "login page";
    Layout = "~/Views/Shared/_Empty.cshtml";
}
@model EkilibrateUI.Areas.SitioAdministrativo.Models.LoginViewModel
<div style="background-image:url(../../assets/img/fondo-1.png); background-size:cover; background-repeat:no-repeat; height:100%;">
    <div style="align-content:center; text-align:center; margin-top: 20px;">
        <img src="~/assets/img/logoprincipal.png" alt="" />
    </div>
    <div style="align-content:center; text-align:center; margin-top: 10px;">
        <img src="~/assets/img/cintillo.png" alt="" />
    </div>
    <div class="login-container animated fadeIn" style="margin-top: 20px;">
        <div class="loginbox bg-white">
            <div class="loginbox-title">¡Bienvenido!</div>
            @*@Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                <div class="loginbox-or">
                    <div class="or-line"></div>
                    <div class="or">OR</div>
                </div>*@

            @using (var form = Html.Bootstrap().Begin(new Form().Type(FormType.Vertical)))
            {
                @Html.HiddenFor(x => x.returnUrl)

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                <div class="loginbox-textbox">
                    @Html.Bootstrap().TextBoxFor(t => t.Email).Placeholder("Usuario")
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="loginbox-textbox">
                    @Html.Bootstrap().PasswordFor(t => t.Password).Placeholder("Password")
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="loginbox-forgot">
                    @*<a href="~/SitioAdministrativo/Home/ForgotPassword">¿Olvidó su contraseña?</a>*@
                    @Html.ActionLink("¿Olvidaste tu contraseña?", "ForgotPassword")
                    </div>
                    <div class="loginbox-submit">
                        @Html.Bootstrap().SubmitButton().Text("Login").Color(BootstrapColors.Primary).ButtonBlock()
                    </div>
                    <div class="loginbox-signup">
                    </div>
                }
            </div>
        </div>
        <div style="text-align:center; margin-top: -367px; margin-left:600px;">
            <a href="~/SitioAdministrativo/Home/Register"><img src="~/assets/img/BotonCrear.png" alt="Crear Usuario"  height="225" width="216"/></a>
        </div>
    </div>
    @section PageScripts {
        @Scripts.Render("~/bundles/jqueryval")
    }




