@using Kendo.Mvc.UI
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Empty.cshtml";
}

@model EkilibrateUI.Areas.SitioAdministrativo.Models.ForgotMyPasswordViewModel

<div style="background-image:url(../../assets/img/fondo-1.png); background-size:cover; background-repeat:no-repeat; height:100%;">
    @using (var form = Html.Bootstrap().Begin(new Form().Type(FormType.Vertical)))
    {
        @Html.AntiForgeryToken()
        <div class="register-container animated fadeInDown">
            <div class="registerbox bg-white">
                <div class="registerbox-title">Olvide mi contraseña</div>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()

                <div class="registerbox-caption ">Por favor llena la información solicitada a continuación para recuperar su cuenta.</div>
               
                <div class="registerbox-textbox">
                    @*@(Html.LabelFor(x => x.Correo, new { @class = "col-sm-4 control-label no-padding-right" }))*@
                    <div class="col-sm-12">
                        @(Html.Kendo().TextBoxFor(x => x.Email).HtmlAttributes(new { @class = "form-control", style = "width:100%", Placeholder = "* Correo Electrónico" }))
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                    </div>
                    <br />
                </div>

                <hr class="wide" />
                @*<div class="registerbox-textbox no-padding-bottom">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" class="colored-primary" checked="checked">
                                <span class="text darkgray">Estoy de acuerdo con <a class="themeprimary">los términos de uso </a> y las poíticas de privacidad</span>
                            </label>
                        </div>
                    </div>*@
                <div class="registerbox-submit">
                    (*) Obligatorio
                    @Html.Bootstrap().ActionLinkButton("Regresar","LogIn","Home").Color(BootstrapColors.Primary).HtmlAttributes(new { @class = "pull-right" })
                    @Html.Bootstrap().SubmitButton().Text("Enviar correo de recuperación").Color(BootstrapColors.Primary).HtmlAttributes(new { @class = "pull-right", @style = "margin-right:15px !important;" })
                    
                </div>
                <br />
                <br />
                <br />
                <div class="registerbox-caption ">@ViewBag.Exito</div>
            </div>
        </div>
    }
</div>